<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LokasiActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/img_1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/polinela_logo"
        android:layout_below="@+id/img_1"
        android:layout_centerHorizontal="true"
        android:id="@+id/img_2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_2"
        android:text="Lokasi Penelitian"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/txt_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_1"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="@color/black"
        android:id="@+id/txt_2"
        android:text="Kami melakukan penelitian di Politeknik Negeri Lampung, Dengan mengumpulkan data-data Kelapa Sawit dari beberapa Jurnal."
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed-light"/>





</RelativeLayout>